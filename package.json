{
  "name": "squaredlabs-website",
  "version": "0.1.0",
  "description": "A server for the SquaredLabs website.",
  "main": "server.js",
  "devDependencies": {},
  "watch": {
    "build:css": "assets/css",
    "build:html": "src/index.pug",
    "build:html2": "src/navbar.pug"
  },
  "scripts": {
    "start": "node server.js",
    "build:css": "postcss assets/css/index.css -u postcss-custom-properties -o build/index.css",
    "build:css2": "postcss assets/css/global.css -u postcss-custom-properties -o build/global.css",    
    "build:html": "pug src/*.pug -o .",
    "build:html2": "pug src/*.pug -o .",    
    "build": "npm run build:html && npm run build:css",
    "watch": "npm-watch"
  },
  "dependencies": {
    "express": "^4.15.4",
    "postcss": "^6.0.11",
    "postcss-cli": "^4.1.1",
    "postcss-cssnext": "^3.0.2",
    "postcss-custom-properties": "^6.1.0",
    "pug": "^2.0.0-rc.4",
    "pug-cli": "^1.0.0-alpha6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SquaredLabs/squaredlabs.uconn.edu.git"
  }
}
